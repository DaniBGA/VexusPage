# ============================================================================
# DATABASE - POSTGRESQL
# ============================================================================

# URL completa de conexi√≥n a PostgreSQL
# Formato: postgresql://usuario:contrase√±a@host:puerto/nombre_db
DATABASE_URL=postgresql://vexus_admin:TU_PASSWORD_AQUI@localhost:5432/vexus_db  # [REQUERIDO]

# ============================================================================
# SECURITY - SEGURIDAD
# ============================================================================

# Clave secreta para JWT y encriptaci√≥n
# Genera una con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERAR_CLAVE_SECRETA_AQUI  # [REQUERIDO]

# Or√≠genes permitidos para CORS (separados por coma, sin espacios)
ALLOWED_ORIGINS=https://grupovexus.com,https://www.grupovexus.com

# ============================================================================
# EMAIL - SMTP (Gmail App Password)
# ============================================================================

# Configuraci√≥n de Gmail con App Password
# Tutorial: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com  # [REQUERIDO]
SMTP_PASSWORD=xxxx-xxxx-xxxx-xxxx  # [REQUERIDO] App Password de Gmail (16 caracteres)
EMAIL_FROM=noreply@grupovexus.com  # [REQUERIDO]

# Timeout para conexiones SMTP (en segundos)
EMAIL_TIMEOUT=10

# ============================================================================
# EMAIL - SENDGRID (Alternativa recomendada)
# ============================================================================

# SendGrid API Key (m√°s confiable que SMTP)
# Obtener en: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx  # [OPCIONAL]

# Email verificado en SendGrid
SENDGRID_FROM_EMAIL=noreply@grupovexus.com  # [OPCIONAL]

# ============================================================================
# FRONTEND
# ============================================================================

# URL del frontend (para links en emails, CORS, etc.)
FRONTEND_URL=https://grupovexus.com

# ============================================================================
# APPLICATION - CONFIGURACI√ìN DE LA APLICACI√ìN
# ============================================================================

# Nombre del proyecto
PROJECT_NAME=Vexus API

# Versi√≥n
VERSION=1.0.0

# Prefijo de la API
API_V1_PREFIX=/api/v1

# Entorno (production, staging, development)
ENVIRONMENT=production

# Debug mode (False en producci√≥n)
DEBUG=False

# ============================================================================
# JWT - TOKENS DE AUTENTICACI√ìN
# ============================================================================

# Tiempo de expiraci√≥n del access token (en minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Tiempo de expiraci√≥n del refresh token (en d√≠as)
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# RATE LIMITING (Opcional)
# ============================================================================

# L√≠mite de requests por minuto por IP
# RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# LOGGING (Opcional)
# ============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
