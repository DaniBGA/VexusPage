# ====================================
# VEXUS BACKEND - PRODUCTION CONFIG
# ====================================
# IMPORTANTE: Este es un template. Crea un archivo .env con tus credenciales reales.

# === BASE DE DATOS ===
DATABASE_URL=postgresql://grupovex_db:TU_PASSWORD_AQUI@localhost:5432/grupovex_db
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_CONNECT_TIMEOUT=10

# === SEGURIDAD ===
# IMPORTANTE: Genera una clave secreta fuerte y aleatoria
# Puedes generarla con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERA-UNA-CLAVE-SECRETA-FUERTE-Y-ALEATORIA-AQUI
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === CORS ===
# IMPORTANTE: Incluir AMBAS versiones (con y sin www)
ALLOWED_ORIGINS=https://grupovexus.com,https://www.grupovexus.com

# === EMAIL (SMTP Gmail) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=grupovexus@gmail.com
# IMPORTANTE: Usar App Password de Gmail, NO la contrase√±a normal
# https://myaccount.google.com/apppasswords
SMTP_PASSWORD=tu_app_password_aqui
EMAIL_FROM=grupovexus@gmail.com

# === FRONTEND ===
FRONTEND_URL=https://grupovexus.com

# === APP ===
PROJECT_NAME=Vexus API
VERSION=1.0.0
API_V1_PREFIX=/api/v1
ENVIRONMENT=production
DEBUG=False
